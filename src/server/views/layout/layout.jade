doctype html
html(ng-app="sloanApp", ng-controller="MainController as main")
	head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0;")
    meta(name="description", content="Matt Sloan is a designer and developer located in Columbus, Ohio. He uses all the latest technologies – including html5, css3, javascript, angular, and node.js – to deliver professional work. Because of his experience in design and his knowledge of the MEAN Stack, he is able to create powerful web applications.")
    meta(name="keywords", content="Matt Sloan, Designer, Developer, Columbus, Ohio")
		title(data-ng-bind="main.Page.title()")
		include header-stylesheets
	body
		include body-header
		include body-content
		include body-footer
		include body-scripts