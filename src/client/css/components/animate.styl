@-webkit-keyframes fadeOut
  from 
    opacity 1
  to
    opacity 0
@keyframes fadeOut
  from 
    opacity 1
  to
    opacity 0

@-webkit-keyframes fadeIn
  from 
    opacity 0
  to
    opacity 1
@keyframes fadeIn
  from 
    opacity 0
  to
    opacity 1

.ng-enter
  -webkit-animation fadeIn 0.1s both ease-in-out
  animation fadeIn 0.1s both ease-in-out
  z-index 8888
  position absolute
  width 100%
.ng-leave
  -webkit-animation fadeOut 0.2s both ease-in-out
  animation fadeOut 0.2s both ease-in-out
  z-index 9999
  position absolute
  width 100%
