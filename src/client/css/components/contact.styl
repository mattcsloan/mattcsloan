.highlight
  display block
  font-size 18px
  padding 10px 0
  margin-top 10px
  background #fcfcfc
  box-shadow 0 0 2px rgba(0,0,0,0.2)
  border-bottom 2px solid #0078f0
  text-align center
  &:hover
    text-decoration none
    background #0078f0
    color #fff
.social
  display flex
  justify-content space-between
  width 80%
  a
    position relative
    .tooltip
      display none
      bottom 40px
      right auto
      left 50%
      margin-left -44px
      width 66px
      &:before
      &:after
        bottom -14px
        right auto
        left 50%
        margin-left -6px
      &:before
        bottom -15px
    &:hover
      .tooltip
        display block


.workload
{
  background: #ddd;
  background-image: -webkit-linear-gradient(top, #cecece, #e6e6e6);
  background-image: -moz-linear-gradient(top, #cecece, #e6e6e6);
  background-image: linear-gradient(top, #cecece, #e6e6e6);
  border: 2px solid #dbdbdb;
  width: 100%;
  height: 16px;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  border-radius: 8px;
  position: relative;
  display: none;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.workload_content
{
    visibility: hidden;
}

.workload_content.tooltip:after
{
    margin-left: -27px;
    left: 87%;
}

.workload span
{
  background: #0078f0;
  background-image: -webkit-linear-gradient(top, #0080ff, #0070e0);
  background-image: -moz-linear-gradient(top, #0080ff, #0070e0);
  background-image: linear-gradient(top, #0080ff, #0070e0);
  position: absolute;
  top: 0;
  left: 0;
  width: 0%;
  height: 12px;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
}

.workload_indicator
{
    text-align: center;
    color: #aaa;
    font-size: 14px;
    font-weight: 400;
    display: inline-block;
    width: 100%;
    margin: 5px 0 50px 0;
}

.workload_indicator span
{
    float: left;
}

.workload_indicator span:last-child
{
    float: right;
}