.gallery
  min-height 100vh
  width 100%
  position absolute
  top 0
  left 0
  padding 0 15% 
  text-align center
  box-sizing(border-box)
  z-index -1
  display-flex()
  align-items(center)
  justify-content(center)
  &.gallery-two
    top 100vh
    background #fff
    text-align left
  .gallery-content
    padding 10% 0
  &.gallery-one
    .gallery-content
      padding-top 15%
      margin-top 73px
      &:after
        content ''
        display block
        clear both
    a.btn
      margin-top 20px
  img
    margin 0 auto
  .social-profile
    width 31%
    float left
    padding 4px
    border 1px solid #fafafa
    margin-right 4%
    box-sizing(border-box)
  .intro
    float left
    width 65%
  h1
    margin-top 0
  a
    &:hover
      img
        opacity 0.9
        transition all 0.2s ease-in-out
        transform scale(1.02)
      