.header
  background #fff
  border-bottom 1px solid #e3e3e3
  .wrapper
    padding 0 16px
    > a
      display block
      float left
      img
        height 24px
        padding 24px 0
      &:hover
        border-bottom 2px solid $main-link
        img
          padding-bottom 22px
          opacity 0.7
.navigation
  float right
  &:after
    content ''
    display block
    clear both
  .btn
    margin 19px 12px 21px 12px
    padding-top 3px
    padding-bottom 3px